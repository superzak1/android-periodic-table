<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Application.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="zoomableScrollViewStyle">@style/ZoomableScrollView</item>
    </style>

    <style name="Theme.Application" parent="Theme.Application.Base" />

    <style name="Theme.Properties.Base" parent="Theme.Application" />

    <style name="Theme.Properties" parent="Theme.Properties.Base" />

    <style name="Theme.Settings.Base" parent="Theme.Application">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="Theme.Settings" parent="Theme.Settings.Base" />

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ZoomableScrollView">
        <item name="android:scrollbars">horizontal|vertical</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
